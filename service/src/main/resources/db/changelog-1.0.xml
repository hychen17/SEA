<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="sea-7" author="hychen17">

        <!--This should be removed in the formal project,
         as the checksum is for protecting unexpected altering to the table >-->
        <validCheckSum>ANY</validCheckSum>

        <createTable tableName="raw_spot_depth">
            <column name="id" type="varchar(128)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="instrument" type="varchar(50)" />
            <column name="message" type="LONGTEXT" />
            <column name="status" type="varchar(50)" />
        </createTable>

        <createTable tableName="processed_record_and_action">
            <column name="id" type="varchar(128)"></column>
            <column name="action" type="varchar(50)" />
            <column name="timestamp" type="varchar(50)" />
        </createTable>

        <addUniqueConstraint
                columnNames="id, action"
                constraintName="unique_record_and_action"
                tableName="processed_record_and_action"
        />

    </changeSet>

</databaseChangeLog>